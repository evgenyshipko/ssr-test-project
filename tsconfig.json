{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "baseUrl": "./",
    "importHelpers": true,
    "noUnusedLocals": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": false,
    "paths": {
      "@src/*": ["./src/*"],
      "@components/*": ["./src/components/*"]
    },
    "typeRoots": ["src/types/**/*.d.ts", "node_modules/@types"]
  },
  "include": [
    "src",
    "./node_modules/@types"
  ],
  "exclude": ["**/*.js", "node_modules"],
    "engines": {
        "node": ">= 14.15.4"
    }
}
